<div class="container">
  
  <div class="row">
    
    <div class="col-lg-12">
      <h1 class="page-header">Services
        <small>What We Do</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="<%= data.site.url %>">Home</a></li>
        <li class="active">Services</li>
      </ol>
    </div>
    
  </div>
  <!-- /.row -->
  
  <div class="row">
    
    <div class="col-lg-12">
      <img class="img-responsive" src="<%= data.services.image %>">
    </div>
    
  </div>
  <!-- /.row -->
  
  <!-- Service Paragraphs -->
  
  <div class="row">
    
    <div class="col-md-12">
      <h2 class="page-header"><%= data.services.title %></h2>
      <p><%= data.services.description %></p>
    </div>
    
  </div>
  <!-- /.row -->
  
  <!-- Service Tabs -->
  
  <div class="row">
    
    <div class="col-lg-12">

      <h2 class="page-header"><%= data.services.subtitle %></h2>

      <ul id="myTab" class="nav nav-tabs">

	<% for service_id in data.services.services.keys %>
	
	<li <%= (service_id==1) ? 'class="active"' : '' %>>
	  <a href="#service-<%= service_id %>" data-toggle="tab"><%= data.services.services[service_id].name %></a>
        </li>
        
        <% end %>

      </ul>

      <div id="myTabContent" class="tab-content">

	<% for service_id in data.services.services.keys %>

        <div class="tab-pane fade <%= (service_id==1) ? 'in active' : '' %>" id="service-<%= service_id %>">
          <div class="col-sm-4">
	    <img class="img-responsive" src="<%= data.services.services[service_id].image %>">
	  </div>
	  <div class="col-sm-8">
            <%= data.services.services[service_id].description %>
	  </div>
        </div>

	<% end %>

      </div>
    
    </div>
    
  </div>
  <!-- /.row -->
  
</div>
<!-- /.container -->
