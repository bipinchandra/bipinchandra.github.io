
<div class="container">
  
  <div class="row">
    
    <div class="col-lg-12">
      <h1 class="page-header">About
        <small>It's Nice to Meet You!</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="<%= data.site.url %>">Home</a>
        </li>
        <li class="active">About</li>
      </ol>
    </div>
    
  </div>
  
  <div class="row">
    
    <div class="col-md-6">
      <img class="img-responsive" src="<%= data.about.image %>">
    </div>
    <div class="col-md-6">
      <h2><%= data.about.title %></h2>
      <%= data.about.description %>
    </div>
    
  </div>
  
  <!-- Team Member Profiles -->
  
  <div class="row">
    
    <div class="col-lg-12">
      <h2 class="page-header">Partners</h2>
    </div>
    

    <% for partner_id in data.about.partners.keys %>

    <div class="col-sm-4">
      <img class="img-responsive" src="http://placehold.it/750x450">
      <h3><%= data.about.partners[partner_id].name %><small><%= data.about.partners[partner_id].title %></small>
      </h3>
      <p><%= data.about.partners[partner_id].description %></p>
      <ul class="list-unstyled list-inline list-social-icons">
        <li class="tooltip-social facebook-link">
	  <a href="<%= data.about.partners[partner_id].facebook %>" data-toggle="tooltip" data-placement="top" title="Facebook">
	    <i class="fa fa-facebook-square fa-2x"></i>
	  </a>
        </li>
        <li class="tooltip-social linkedin-link">
	  <a href="<%= data.about.partners[partner_id].linkedin %>" data-toggle="tooltip" data-placement="top" title="LinkedIn">
	    <i class="fa fa-linkedin-square fa-2x"></i>
	  </a>
        </li>
        <li class="tooltip-social twitter-link">
	  <a href="<%= data.about.partners[partner_id].twitter %>" data-toggle="tooltip" data-placement="top" title="Twitter">
	    <i class="fa fa-twitter-square fa-2x"></i>
	  </a>
        </li>
        <li class="tooltip-social google-plus-link">
	  <a href="<%= data.about.partners[partner_id].google_plus %>" data-toggle="tooltip" data-placement="top" title="Google+">
	    <i class="fa fa-google-plus-square fa-2x"></i>
	  </a>
        </li>
      </ul>
    </div>
    
    <% end %>
    
  </div>
  
  <!-- Our Customers -->
  
  <div class="row">
    
    <div class="col-lg-12">
      <h2 class="page-header">Our Customers</h2>
    </div>
    
    <% for customer_id in data.about.customers.keys %>

    <div class="col-md-2 col-sm-4 col-xs-6">
      <img class="img-responsive img-customer" title="<%= data.about.customers[customer_id].name %>" src="<%= data.about.customers[customer_id].image %>">
    </div>
        
    <% end %>

  </div>
  
</div>
<!-- /.container -->
