
<%
   name = data.company.contact.name
   address = data.company.contact.address
   phone = data.company.contact.phone
   email = data.company.contact.email
   gmap = data.company.contact.gmap

   linkedin = data.company.contact.linkedin
   twitter = data.company.contact.twitter
   facebook = data.company.contact.facebook
   gplus = data.company.contact.gplus
%>

<% if(data.company.contact.tagline != "nil") %>
<div class="row"><div class="col-md-12"><%= data.company.contact.tagline %></div></div>
<% end %>

<br>

<div class="row">
  
  <div class="col-sm-12 col-md-8">
    <iframe width="100%" height="300px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="<%= gmap %>"> </iframe>
  </div>
  
  <div class="col-sm-12 col-md-4">
    
    <h4><%= name %></h4>
    <p><%= address %></p>
    
    <p><i class="fa fa-phone"></i>&nbsp;<%= phone %></p>
    <p><i class="fa fa-envelope-o"></i>&nbsp;<a href="mailto:<%= email %>"><%= email %></a></p>

    <%= partial "partials/social_individual",:locals =>{:linkedin=>linkedin,:twitter=>twitter,:facebook=>facebook,:gplus=>gplus,:email=>email} %>
    
  </div>
  
  
</div>
