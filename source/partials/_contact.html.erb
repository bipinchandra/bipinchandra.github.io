
<section id="contact">

  <div class="container">

    <header class="text-center">
      <h1><i class="<%= data.contact.icon %>"></i>&nbsp;<%= data.contact.title %></h1>
    </header>
    <div class="divider"></div>
    <p class="text-center">
      <% if(data.contact.facebook != "nil")  %>
      <a href="<%= data.contact.facebook %>" class="social fa fa-facebook"></a>
      <% end %>
      <% if(data.contact.twitter != "nil")  %>
      <a href="<%= data.contact.twitter %>" class="social fa fa-twitter"></a>
      <% end %>
      <% if(data.contact.gplus != "nil")  %>
      <a href="<%= data.contact.gplus %>" class="social fa fa-google-plus"></a>
      <% end %>
    </p>
    
    <article>
      <p class="text-center big-paragraph">
	<div class="col-md-6 text-left">
	  <div style="float:left;"><i class="fa fa-5x fa-building"></i>&nbsp;</div>
	  <div><%= data.contact.address %></div>
	</div>
	<div class="col-md-6 text-right">
	  <i class="fa fa-phone"></i>&nbsp;<%= data.contact.phone %>
	  <br>
	  <i class="fa fa-envelope"></i>&nbsp;<a href="mailto:data.contact.email"><%= data.contact.email %></a>
	</div>
      </p>
    </article>

  </div>

  <br><br>


  <% if(data.contact.gmap != "nil") %>
  <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="<%= data.contact.gmap %>"></iframe>
  <% end %>

</section>
