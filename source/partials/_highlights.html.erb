
<div class="container">

  <div class="row">
  
    <div class="col-lg-12">
      <h1 class="page-header" style="color:<%= data.home.welcome_color %>;"><%= data.home.welcome %></h1>
    </div>
 
    <% if(data.home.text != "nil") %>
    <div class="col-md-12"><%= data.home.text %><br><br></div>
    <% end %>
 
    <% for highlight_id in data.home.highlights.keys %>
    <%
       name = data.home.highlights[highlight_id].name
       icon = data.home.highlights[highlight_id].icon
       text_color = data.home.highlights[highlight_id].text_color
       icon_color = data.home.highlights[highlight_id].icon_color
       image = data.home.highlights[highlight_id].image
       detail = data.home.highlights[highlight_id].detail
    %>
    <div class="col-lg-4 col-md-4">
      <div class="panel panel-default">
	<div class="panel-heading">
          <h4>
	    <i class="<%= icon %>" style="color:<%= icon_color %>"></i>&nbsp;<span style="color:<%= text_color %>"><%= name %></span>
	  </h4>
	</div>
        <div class="panel-body">
	  <img class="img-responsive" src="<%= image %>"><br>
	  <%= detail %>
	</div>
      </div>
    </div>
    <% end %>
    
  </div>

</div>


