
<section id="about">

  <div class="container">

    <header class="text-center">
      <h1><%= data.about.title %></h1>
    </header>
    <div class="divider"></div>
    
    <article class="text-center big-paragraph">
      <p><%= data.about.text %></p>
    </article>
    
    <div>
      <%= partial "partials/team" %>
    </div>
    


    <article>

      <div class="row text-left">
	<% for hgh_id in data.about.highlights.keys %>
	<%
           name = data.about.highlights[hgh_id].name
           text = data.about.highlights[hgh_id].text
        %>
	<div class="col-md-6">
	  <h3><%= name %></h3>
	  <p><%= text %></p>
	  <br>
	</div>
	<% end %>
      </div>
    </article>
    
  </div>

</section>
