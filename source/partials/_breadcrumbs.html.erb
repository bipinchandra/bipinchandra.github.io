
<% 
   title_main = title_main.nil? ? title : title_main 
   btype = btype.nil? ? "" : btype
   icon = icon.nil? ? "nil" : icon
%>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= title_main %>
      <% if(icon != "nil") %>
      <small><i class="<%= icon %>"></i></small>
      <% end %>
    </h1>
    <ol class="breadcrumb" style="background-color:<%= data.site.breadcrumb.background %>;">
      <li><a style="color:<%= data.site.breadcrumb.linkcolor %>;" href="/">Home</a></li>
      <% if(btype == "services") %><li><a style="color:<%= data.site.breadcrumb.linkcolor %>;" href="/services">Services</a></li><% end %>
      <% if(btype == "solutions") %><li><a style="color:<%= data.site.breadcrumb.linkcolor %>;" href="/solutions">Solutions</a></li><% end %>
      <li style="color:<%= data.site.breadcrumb.textcolor %>;" class="active"><%= title %></li>
    </ol>
  </div>
</div>



