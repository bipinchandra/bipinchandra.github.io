
<div class="container">

  <%= partial "partials/breadcrumbs", :locals => { :title => data.solution.title, :icon => "fa fa-thumbs-up" }  %>

  <% if(data.solution.tagline != "nil") %>
  <div class="row"><div class="col-md-12"><%= data.solution.tagline %></div></div>
  <% end %>

  <br>

  <div class="row">
    <% for solution_id in data.solution.solutions.keys %>
    <%
       name = data.solution.solutions[solution_id].name
       image = data.solution.solutions[solution_id].image_front
       summary = data.solution.solutions[solution_id].summary
       link_tag = data.solution.solutions[solution_id].link_tag
       url_name = data.solution.solutions[solution_id].url_name
    %>
    <div class="col-md-3 col-sm-6">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
	  <img class="img-responsive" src="<%= image %>">
        </div>
        <div class="panel-body">
          <h4><%= name %></h4>
          <p><%= summary %></p>
          <a href="/solutions/<%= url_name %>-<%= solution_id %>" class="btn btn-primary"><%= link_tag %></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
